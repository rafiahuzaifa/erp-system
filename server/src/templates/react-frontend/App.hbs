import React, { useState, useEffect } from 'react';
import { BrowserRouter, Routes, Route, Link, useLocation } from 'react-router-dom';
import axios from 'axios';

{{#each modules}}
import {{pascalCase this.name}}Page from './pages/{{pascalCase this.name}}Page';
{{/each}}

const API = axios.create({ baseURL: '/api' });

// ===== Dashboard =====
function Dashboard() {
  const [stats, setStats] = useState(null);
  const [loading, setLoading] = useState(true);

  useEffect(() => {
    API.get('/dashboard/stats')
      .then(res => setStats(res.data))
      .catch(() => {})
      .finally(() => setLoading(false));
  }, []);

  if (loading) return <div className="flex justify-center py-20"><div className="animate-spin rounded-full h-8 w-8 border-b-2 border-indigo-600"></div></div>;

  return (
    <div>
      <h1 className="text-3xl font-bold text-gray-900 mb-2">Dashboard</h1>
      <p className="text-gray-500 mb-8">Welcome to {{project.name}}</p>

      {/* Stats Cards */}
      <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        {stats && Object.entries(stats.stats || {}).map(([key, val]) => (
          <div key={key} className="bg-white rounded-xl shadow-sm border p-6">
            <p className="text-sm font-medium text-gray-500 capitalize">{key.replace('Count', '').replace(/([A-Z])/g, ' $1').trim()}</p>
            <p className="text-3xl font-bold text-gray-900 mt-1">{val}</p>
          </div>
        ))}
      </div>

      {/* Quick Links */}
      <h2 className="text-xl font-semibold text-gray-900 mb-4">Modules</h2>
      <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
{{#each modules}}
        <Link to="/{{kebabCase this.name}}" className="block bg-white rounded-xl shadow-sm border p-6 hover:shadow-md transition-shadow group">
          <h3 className="text-lg font-semibold text-gray-900 group-hover:text-indigo-600">{{this.displayName}}</h3>
          <p className="mt-1 text-sm text-gray-500">{{this.entities.length}} entities</p>
          <div className="mt-3 flex flex-wrap gap-1">
{{#each this.entities}}
            <span className="px-2 py-0.5 bg-indigo-50 text-indigo-700 text-xs rounded-full">{{this.name}}</span>
{{/each}}
          </div>
        </Link>
{{/each}}
      </div>
    </div>
  );
}

// ===== Sidebar =====
function Sidebar({ isOpen, onClose }) {
  const location = useLocation();
  const navItems = [
    { path: '/', label: 'Dashboard', icon: 'ðŸ“Š' },
{{#each modules}}
    { path: '/{{kebabCase this.name}}', label: '{{this.displayName}}', icon: 'ðŸ“¦' },
{{/each}}
  ];

  return (
    <>
      {isOpen && <div className="fixed inset-0 bg-black bg-opacity-50 z-40 lg:hidden" onClick={onClose} />}
      <aside className={`fixed top-0 left-0 z-50 h-full w-64 bg-white border-r shadow-lg transform transition-transform lg:translate-x-0 lg:static lg:shadow-none ${isOpen ? 'translate-x-0' : '-translate-x-full'}`}>
        <div className="p-6 border-b">
          <h1 className="text-xl font-bold text-indigo-600">{{project.name}}</h1>
          <p className="text-xs text-gray-400 mt-1">{{project.description}}</p>
        </div>
        <nav className="p-4 space-y-1">
          {navItems.map(item => {
            const isActive = location.pathname === item.path || (item.path !== '/' && location.pathname.startsWith(item.path));
            return (
              <Link
                key={item.path}
                to={item.path}
                onClick={onClose}
                className={`flex items-center gap-3 px-3 py-2.5 rounded-lg text-sm font-medium transition-colors ${
                  isActive ? 'bg-indigo-50 text-indigo-700' : 'text-gray-600 hover:bg-gray-50 hover:text-gray-900'
                }`}
              >
                <span>{item.icon}</span>
                {item.label}
              </Link>
            );
          })}
        </nav>
        <div className="absolute bottom-0 left-0 right-0 p-4 border-t bg-gray-50">
          <p className="text-xs text-gray-400">Built with ERP Builder</p>
        </div>
      </aside>
    </>
  );
}

// ===== App Layout =====
function AppLayout() {
  const [sidebarOpen, setSidebarOpen] = useState(false);

  return (
    <div className="min-h-screen bg-gray-50 lg:flex">
      <Sidebar isOpen={sidebarOpen} onClose={() => setSidebarOpen(false)} />
      <div className="flex-1">
        <header className="bg-white border-b px-4 py-3 flex items-center justify-between lg:px-8">
          <button onClick={() => setSidebarOpen(!sidebarOpen)} className="lg:hidden p-2 rounded-lg hover:bg-gray-100">
            <svg className="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M4 6h16M4 12h16M4 18h16" /></svg>
          </button>
          <div className="flex items-center gap-4">
            <span className="text-sm text-gray-500">{new Date().toLocaleDateString()}</span>
          </div>
        </header>
        <main className="p-4 lg:p-8">
          <Routes>
            <Route path="/" element={<Dashboard />} />
{{#each modules}}
            <Route path="/{{kebabCase this.name}}/*" element={<{{pascalCase this.name}}Page />} />
{{/each}}
            <Route path="*" element={<div className="text-center py-20"><h2 className="text-2xl font-bold text-gray-400">Page Not Found</h2><Link to="/" className="mt-4 inline-block text-indigo-600 hover:underline">Go to Dashboard</Link></div>} />
          </Routes>
        </main>
      </div>
    </div>
  );
}

function App() {
  return (
    <BrowserRouter>
      <AppLayout />
    </BrowserRouter>
  );
}

export default App;
