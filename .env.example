# ============================
# ERP Builder — Environment Variables
# Copy this to .env and fill in values
# ============================

# Server
PORT=3001
NODE_ENV=development

# JWT (generate a strong random string for production)
JWT_SECRET=your-jwt-secret-change-in-production
JWT_EXPIRES_IN=7d

# MongoDB (use MongoDB Atlas URI for production)
MONGODB_URI=mongodb://localhost:27017/erp_builder

# PostgreSQL — use DATABASE_URL for Neon/production (overrides PG_* vars)
DATABASE_URL=
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=erp_builder
PG_USER=erp_admin
PG_PASSWORD=erp_secret

# AI (optional — enables AI suggestions)
GEMINI_API_KEY=
OPENAI_API_KEY=

# CORS — set to your Vercel frontend URL in production
CLIENT_URL=http://localhost:5173

# Deployment (local node-spawn deploys)
DEPLOY_PORT_START=4000
DEPLOY_PORT_END=5000
GENERATED_PROJECTS_DIR=./generated

# Docker (optional)
DOCKER_SOCKET=/var/run/docker.sock

# Payments (optional)
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
